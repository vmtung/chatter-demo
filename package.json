{
  "name": "nodejs-react-parcel-boilerplate",
  "version": "1.0.0",
  "description": "A minimal NodeJS server and React client boilerplate with parcel as bundler",
  "main": "index.js",
  "scripts": {
    "start": "rm -rf ./client/dist & parcel watch ./client/src/index.html --out-dir ./client/dist --public-url ./ & nodemon index.js",
    "build": "rm -rf ./client/build & parcel build ./client/src/index.html --out-dir client/build --public-url /client",
    "prod": "NODE_ENV=production nodemon index.js",
    "build-prod": "npm run build & npm run prod"
  },
  "keywords": [
    "parcel",
    "react"
  ],
  "author": "Thiago Brasil <tchaguitos@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "bcrypt": "^3.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "consign": "^0.1.6",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^4.13.4",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "nodemon": "^1.18.4",
    "parcel-bundler": "^1.9.7"
  }
}
